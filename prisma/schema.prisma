generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model CaptainPick {
  id  String @id @default(cuid())
  name String
  count Int
  playerElementId Int @unique
  chosenAsCaptainPercentage Float
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}


model EffectiveOwnership {
  id  String @id @default(cuid())
  name String
  count Int
  playerElementId Int @unique
  chosenEffectiveOwnershipPercentage Float
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model PlayerPicks {
  id  String @id @default(cuid())
  name String
  count Int
  playerElementId Int
  type String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model PriceChangesIncrease {
  id  String @id @default(cuid())
  playerElementId Int 
  name String
  cost String
  team String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model PriceChangesDecrease {
  id  String @id @default(cuid())
  playerElementId Int 
  name String
  cost String
  team String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model PriceChanges {
  id  String @id @default(cuid())
  playerElementId Int 
  name String
  cost String
  team String
  type String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}